class ThreadDemo2 implements Runnable {

	@Override
	public void run() {
		try {
			while (true) {
				System.out.println("Thread is alive");
				Thread.sleep(500);
			}

		} catch (InterruptedException err) {
			err.printStackTrace();
		} finally {
			System.out.println("Thread is dead ...");
		}
	}

}

public class ThreadTest3 {

	public static void main(String[] args) {
		// TODO 스레드의 강제 종료

	}

}
